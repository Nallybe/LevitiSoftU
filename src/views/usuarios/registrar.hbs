                      <input type="email" class="form-control" placeholder="Correo X" style="border-radius: 0;"
                        id="correo" name="correo" oninput="val_correo()" autocomplete="off">
                      <label for="correo">
                        <h5>Correo</h5><br>
                      </label>
                      <div id="mensajeErrorCorreo"></div>
                    </div>
                    <!--End Input Correo-->

                    <!--Input Password-->
                    <div class="form-floating mb-3">
                      <input type="password" class="form-control" placeholder="Password X" style="border-radius: 0;"
                        id="password" name="password" oninput="val_password()" autocomplete="off">
                      <label for="password">
                        <h5>Password</h5><br>
                      </label>
                      <div id="mensajeErrorPassword"></div>
                    </div>
                    <!--End Input Password-->
                  </div>
                  <div class="col-6">

                    <!--Input Documento-->
                    <div class="form-floating mb-3">
                      <input type="number" class="form-control" placeholder="Documento X" style="border-radius: 0;"
                        id="documento" name="documento" oninput="val_documento()" autocomplete="off">
                      <label for="documento">
                        <h5>Documento</h5><br>
                      </label>
                      <div id="mensajeErrorDocumento"></div>
                    </div>
                    <!--End Input Documento-->

                    <!--Input Nombre-->
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control" placeholder="Nombre X" style="border-radius: 0;"
                        id="nombre" name="nombre" oninput="val_nombre()" autocomplete="off">
                      <label for="nombre">
                        <h5>Nombre</h5><br>
                      </label>
                      <div id="mensajeErrorNombre"></div>
                    </div>
                    <!--End Input Nombre-->


                    <!--Input Telefono-->
                    <div class="form-floating mb-3">
                      <input type="number" class="form-control" placeholder="Telefono X" style="border-radius: 0;"
                        id="telefono" name="telefono" oninput="val_telefono()" autocomplete="off">
                      <label for="telefono">
                        <h5>Teléfono</h5><br>
                      </label>
                      <div id="mensajeErrorTelefono"></div>
                    </div>
                    <!--End Input Telefono-->
                  </div>
                </div>

                <!--Start Btn R&C-->
                <div class="d-grid gap-2 mb-3">

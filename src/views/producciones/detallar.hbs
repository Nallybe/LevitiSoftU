                <h4 class="mt-6" style="text-align: left; margin-left: 20%;">Cronograma</h4>
                <center>
                    <div class="scroll_horizontal">
                        <table class="table table-bordered border-primary table-hover sticky ml-0">
                            <thead>
                                <tr>
                                    <td style="background: cornflowerblue;"></td>
                                    {{#each dates3}}
                                    <th style="background: cornflowerblue;">
                                        <h6 style="width: 100px; text-align: center;">{{this}}</h6>
                                    </th>
                                    {{/each}}
                                </tr>
                            </thead>

                            <tbody>
                                {{#each records3}}
                                <tr>
                                    {{#each this}}
                                    {{#if this.titulo}}
                                    <th style="background: cornflowerblue;" data-bs-toggle="popover"
                                        data-bs-trigger="hover" data-bs-html="true" title="<b>Tarea/Evento/Proceso</b>"
                                        data-bs-content="
                                        <div class='popover-content'>
                                            <b>Titulo:</b> {{this.titulo}}<br>
                                            <b>Descripción:</b> {{this.descripcion}}<br>
                                            <b>Observaciones:</b> {{this.observacion}}<br>
                                            <b>Fecha inicio (estimado):</b> {{this.fechaInicio}}<br>
                                            <b>Fecha fin (estimado):</b> {{this.fechaFin}}<br>
                                            <b>Estado: </b>{{this.estado}}
                                        </div>
                                        ">
                                        <span><i class="fas fa-list-ol" style="color:black"></i></span>{{this.titulo}}
                                    </th>
                                    {{else}}
                                    <td class="{{#if this.seleccionado}} text-primary{{/if}} {{#if this.seleccionado}}x{{/if}}"
                                        style="text-align: center;">
                                        {{!--{{#if this.seleccionado}}{{/if}}--}}
                                    </td>
                                    {{/if}}
                                    {{/each}}
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </center>
            </div>
    </div>
</div>
</center>







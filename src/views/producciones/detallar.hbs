<!--Barra de navegación-->
{{> barId}}
        <!--Barra de navegación-->
        <br><br><br>
        <center>
            <div class="container mb-5">
                <table class="table table-hover" style="text-align:center;" id="tabla-compras-detalles">
                    <thead style="background-color: #282d32; color:white;">
                        <tr>
                            <th colspan="3" style="background-color: #30363d; color:white;"><b>Registro</b></th>
                        </tr>
                        <tr>
                            <th class="w-1/4 ...">#</th>
                            <!--<th class="w-1/4 ...">Registrador</th>-->
                            <th class="w-1/4 ...">Encargado</th>
                            <th class="w-1/4 ...">Producto</th>
                            <th class="w-1/4 ...">Cantidad Producir</th>
                            <th class="w-1/4 ...">Fecha Inicio</th>
                            <th class="w-1/4 ...">Fecha Fin</th>
                            <th class="w-1/4 ...">Estado</th>
                            <!-- <th class="w-1/4 ...">Funciones</th>-->
                        </tr>
                    </thead>
                    <tbody>
                        {{#each producciones}}
                        <tr class="table-active">
                            <td class="py-3 px-6 text-center">{{idOrdenProduccion}}</td>
                            <td class="p-3 text-center">
                                <button class="btn btn-warning" href="/usuarios/{{idInfoUser}}" type="button"
                                    data-bs-toggle="popover" data-bs-trigger="hover" data-bs-html="true"
                                    title="<b>Usuario {{idInfoUser}}</b>" data-bs-content="
                                    <div class='row'>
                                      <div class='col-md-4'>
                                        <img src='https://icons.iconarchive.com/icons/fa-team/fontawesome/512/FontAwesome-User.png' width='100' />
                                      </div>
                                      <div class='col-md-8'>
                                        <b>Nombre:</b> {{userName}}<br>
                                        <b>Teléfono:</b> {{userTell}}<br>
                                        <b>#Producciones:</b> {{userNumOP}}
                                      </div>
                                    </div>
                                    ">{{userName}} <span class="badge text-bg-secondary"><i class="fas fa-user" style="color:black"></i></span>
                                </button>
                            </td>


                            <td class="p-3 text-center">
                                <button class="btn btn-info" href="/productos/{{idProducto}}" type="button"
                                    data-bs-toggle="popover" data-bs-trigger="hover" data-bs-html="true"
                                    title="<b>Producto {{idProducto}}</b>" data-bs-content="
                                    <div class='popover-content'>
                                    <div class='row'>
                                      <div class='col-md-4'>
                                        <img src='https://icons.iconarchive.com/icons/fa-team/fontawesome/512/FontAwesome-Gift.png' width='100' />
                                      </div>
                                      <div class='col-md-8'>
                                        <b>Nombre:</b> {{proName}}<br>
                                        <b>Descripción:</b> {{proDes}}<br>
                                        <b>Precio:</b> {{proPrecio}}<br>
                                        <b>Stock:</b> {{proStock}}
                                      </div>
                                    </div>
                                    </div>
                                    ">{{proName}} <span class="badge text-bg-secondary"><i class="fas fa-gift" style="color:black"></i></span>
                                </button>
                            </td>
                            <td class="p-3 text-center">{{cantidad}}</td>
                            <td class="p-3 text-center">{{fechaInicio}}</td>
                            <td class="p-3 text-center">{{fechaFin}}</td>
                            {{#if estado1}}
                            <td class="p-3 text-center">
                                <button class="btn btn-primary" style="border-radius:0;" data-bs-toggle="modal"
                                    data-bs-target="#Iniciado" disabled>Iniciado</button>
                            </td>
                            {{/if}}
                            {{#if estado2}}
                            <td class="p-3 text-center">
                                <button class="btn btn-success" style="border-radius:0;" data-bs-toggle="modal"
                                    data-bs-target="#Proceso" disabled>En
                                    Proceso</button>
                            </td>
                            {{/if}}
                            {{#if estado3}}
                            <td class="p-3 text-center">
                                <button class="btn btn-secondary" style="border-radius:0;" data-bs-toggle="modal"
                                    data-bs-target="#Terminado" disabled>
                                    Terminado
                                </button>
                            </td>
                            {{/if}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

                <table class="table table-hover mt-5 mb-5" style="text-align:center;" id="tabla-compras">
                    <thead style="background-color: #282d32; color:white;">
                        <tr>
                            <th colspan="3" style="background-color: #30363d; color:white;"><b>Detalles</b></th>
                        </tr>
                        <tr>
                            <th class="w-1/4 ...">#</th>
                            <!--<th class="w-1/4 ...">Registrador</th>-->
                            <th class="w-1/4 ...">Titulo</th>
                            <th class="w-1/4 ...">Descripción</th>
                            <th class="w-1/4 ...">Observaciones</th>
                            <th class="w-1/4 ...">Fecha Inicio</th>
                            <th class="w-1/4 ...">Fecha Fin</th>
                            <th class="w-1/4 ...">Estado</th>
                            <!-- <th class="w-1/4 ...">Funciones</th>-->
                        </tr>
                    </thead>
                    <tbody>
                        {{#each d_produccion}}
                        <tr class="table-active">
                            <td class="py-3 px-6 text-center">{{cont}}</td>
                            
                            <td class="p-3 text-center">{{titulo}}</td>
                            <td class="p-3 text-center">{{descripcion}}</td>
                            <td class="p-3 text-center">{{observacion}}</td>
                            <td class="p-3 text-center">{{fechaInicio}}</td>
                            <td class="p-3 text-center">{{fechaFin}}</td>
                            {{#if estado1}}
                            <td class="p-3 text-center">
                                <button class="btn btn-primary" style="border-radius:0;" data-bs-toggle="modal"
                                    data-bs-target="#Iniciado" disabled>Iniciado</button>
                            </td>
                            {{/if}}
                            {{#if estado2}}
                            <td class="p-3 text-center">
                                <button class="btn btn-success" style="border-radius:0;" data-bs-toggle="modal"
                                    data-bs-target="#Proceso" disabled>En
                                    Proceso</button>
                            </td>
                            {{/if}}
                            {{#if estado3}}
                            <td class="p-3 text-center">
                                <button class="btn btn-secondary" style="border-radius:0;" data-bs-toggle="modal"
                                    data-bs-target="#Terminado" disabled>
                                    Terminado
                                </button>
                            </td>
                            {{/if}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

                <!-- Prieba 3 ya va saliendo mejor-->
                <style type="text/css">
                    div.scroll_horizontal {

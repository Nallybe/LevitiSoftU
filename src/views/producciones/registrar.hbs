                        <th>#</th>
                        <th> Titulo</th>
                        <th> Fecha Inicio</th>
                        <th> Fecha Fin</th>
                        <th> Funciones </th>
                      </tr>
                    </thead>
                    <tbody id="ListaEventos">
                    </tbody>
                  </table>
                </div>
                <!--End Table-->
                <div class="pagination">
                  <button type="button" class="prev-btn mt-3">Anterior</button>
                  <button type="button" class="next-btn mt-3">Siguiente</button>
                </div>
              </div>
            </div>

            <!--End Card #3-->
            <div class="row">
              <div class="col-8"></div>
              <div class="col-4">
                <!--Start Btn Cancelar-->
                <a class="btn btn-danger btn-sm" href="/producciones" style="margin-top: 1px;"
                  type="button">Cancelar</a>
                <!--End Btn Cancelar-->

                <!--Start Btn Registrar-->
                <button type="submit" class="btn btn-success btn-sm" style="margin-bottom: 1px;">
                  Registrar Producción</button>
                <!--End Btn Regiastrar-->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--End Card&Form-->

    <div id="modales"></div>

  </form>

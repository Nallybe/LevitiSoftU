  <form action="/producciones_registrar" method="post" onsubmit="return validarEnvio()" id="FormRegistrarProduccion">
    <!--Start Card&Form-->
    <div class="card" style="width: 98%; border-radius: 0; margin-left:1%; margin-top: 60px;">
      <div class="card-body">
        <h6 class="card-title" style="margin-bottom: 1%;">Registrar Orden de Producción</h6>

        <div class="row">
          <div class="col-3">
            <!--Start Card #1-->
            <div class="card" style="border-radius: 0; width: 100%; margin-bottom: 3%;">
              <div class="card-body">
                <h6 class="card-title" style="margin-bottom: 2%;">Producción</h6>

                <!--Input Encargado-->
                <label class="form-label" for="idEncargado">Encargado</label>
                <input type="text" class="form-control form-control-sm" list="lis_encargados" style="border-radius: 0;"
                  id="idEncargado" name="idEncargado" autocomplete="off" oninput="val_encargado()">
                <datalist id="lis_encargados">
                  {{#each usuarios}}
                  <option value="{{correo}}">Nombre({{nombre}}) Teléfono({{telefono}}) Correo({{correo}})</option>
                  {{/each}}
                </datalist>
                <div id="mensajeErrorEncargado"></div>
                <!--End Input Encargado-->

                <!--Input Producto-->
                <label class="form-label mt-2" for="idProducto">Producto</label>
                <input type="text" class="form-control form-control-sm" list="lis_productos" style="border-radius: 0;"
                  id="idProducto" name="idProducto" autocomplete="off" oninput="val_producto()">
                <datalist id="lis_productos">
                  {{#each productos}}
                  <option value="{{nombre}}" style="color: black;">
                    <div class="row">
                      <div class="col-md-3">
                        <img src="/assets/img/Productos/{{imagen}}" alt="Imagen del producto"
                          style="max-width:40px; max-height:40px, display: inline-block;">
                      </div>
                      <div class="col-md-9">
                        <p>Nombre({{nombre}}) Categoría({{categoria}}) Stock({{stock}})</p>
                      </div>
                    </div>

                  </option>
                  {{/each}}
                </datalist>
                <div id="mensajeErrorProducto"></div>
                <!--End Input Producto-->

                <!--Input Cantidad-->
                <label class="form-label mt-2" for="cantidad">Cantidad Producir</label>
                <input type="number" class="form-control form-control-sm" style="border-radius: 0;" id="cantidad"
                  name="cantidad" oninput="val_cantidad()" autocomplete="off">
                <div id="mensajeErrorCantidad"></div>
                <!--End Input Cantidad-->

                <!--Input Fecha Inicio-->
                <label class="form-label mt-2" for="fechaInicio">Fecha Inicio</label>
                <input type="date" class="form-control form-control-sm" style="border-radius: 0;" id="fechaInicio"

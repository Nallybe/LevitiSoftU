  <script>
    var cont = 0;
    function agregarEvento() {
      const tarea = {
        titulo: document.getElementById('titulo_R').value,
        descripcion: document.getElementById('descripcion_R').value,
        observacion: document.getElementById('observacion_R').value,
        fechaInicio: document.getElementById('fechaInicio_R').value,
        fechaFin: document.getElementById('fechaFin_R').value
      };

      if (tarea.titulo != "" && tarea.descripcion != "" && tarea.observacion != "" && tarea.fechaInicio != "" && tarea.fechaFin != "") {
        cont++;
        document.getElementById('ListaEventos').innerHTML += `
          <tr id="${cont}"style="text-align: center">
              <td class="text-center">${cont}</td>
              <td class="text-center">
                  <input name="titulo" id="titulo_${cont}" value="${tarea.titulo}" style="text-align: center; width: 150px;  border: none;" readonly>
              </td>
              <td class="text-center>
                  <textarea name="descripcion" id="descripcion_${cont}" style="text-align: center; width: 200px;  border: none;" readonly>${tarea.descripcion}</textarea>
              </td>
              <td class="text-center>
                  <textarea name="observacion" id="observacion_${cont}" style="text-align: center; width: 200px;  border: none;" readonly>${tarea.observacion}</textarea>
              </td>
              <td class="text-center">
                  <input type="date" name="fechaInicio_detalle" id="fechaInicio_${cont}" value="${tarea.fechaInicio}" style="text-align: center; width: 100px;  border: none;">
              </td>
              <td class="text-center">
                  <input type="date" name="fechaFin_detalle" id="fechaFin_${cont}" value="${tarea.fechaFin}" style="text-align: center; width: 100px;  border: none;">
              </td>
              <td class="text-center">

                <a class="boton-produccion" href="#" style="color: #292b2c;" data-bs-toggle="modal" data-bs-target="#editar${cont}">
                  <i class="fa-sharp fa-solid fa-pen" style="margin-left: 10px;"></i>
                </a>

                <a class="boton-produccion" href="#" onclick="eliminarTarea(${cont})" style="color: #292b2c;">
                  <i class="fas fa-trash"></i>
                </a>
            </td>
          </tr>


          <!-- Modal editar-->
          <div class="modal fade" id="editar${cont}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
              <div class="modal-content" style="border-radius: 0;">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">Editar Artículo ${cont}</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-floating mb-3">
                      <textarea class="form-control" id="titulo_R2_${cont}" style="border-radius: 0; text-align: left;" placeholder="0000">${tarea.titulo}</textarea>

      document.getElementById(idProR).value = document.getElementById(idProR_R).value;
      document.getElementById(idDes).value = document.getElementById(idDes_R).value;
      document.getElementById(idObs).value = document.getElementById(idObs_R).value;
      /*document.getElementById(IdFI).value = document.getElementById(IdFI_R).value;
      document.getElementById(IdFF).value = document.getElementById(IdFF_R).value;*/

      Swal.fire({
        position: 'top-end',
        icon: 'success',
        title: 'Tarea Actualizada',
        showConfirmButton: false,
        timer: 1000
      });
    }


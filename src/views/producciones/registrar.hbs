    function val_f_inicio() {
      var fechaInicio = document.getElementById("fechaInicio");

      if (fechaInicio.value != "") {
        mensajeErrorFechaInicio.innerHTML = '';
        mensajeErrorFechaInicio.style.display = 'none';

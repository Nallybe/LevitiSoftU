  <script>
    var lastValueI = ""; // Variable para almacenar el último valor válido

    function val_titulo() {
      var titulo = document.getElementById("titulo_R");

      if (titulo.value != "") {
        mensajeErrorTitulo.innerHTML = '';
        mensajeErrorTitulo.style.display = 'none';

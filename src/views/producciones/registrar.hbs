                    <div class="form-floating mb-3">
                      <textarea class="form-control pb-5" id="descripcion_R2_${cont}" style="border-radius: 0; text-align: left;" placeholder="0000">${tarea.descripcion}</textarea>
                      <label for="descripcion_R2_${cont}">Descripción</label>
                    </div>

                    <div class="form-floating mb-3">
                      <textarea class="form-control pb-5" id="observacion_R2_${cont}" style="border-radius: 0; text-align: left;" placeholder="0000">${tarea.observacion}</textarea>
                      <label for="observacion_R2_${cont}">Observaciones</label>
                    </div>

                    <div class="form-floating mb-3">
                      <input type="date" class="form-control" id="fechaInicio_R2_${cont}" style="border-radius: 0; text-align: left;" placeholder="0000" value="${tarea.fechaInicio}" readonly>
                      <label for="fechaInicio_R2_${cont}">Fecha Inicio</label>
                    </div>

                    <div class="form-floating mb-3">
                      <input type="date" class="form-control" id="fechaFin_R2_${cont}" style="border-radius: 0; text-align: left;" placeholder="0000" value="${tarea.fechaFin}" readonly>
                      <label for="fechaFin_R2_${cont}">Fecha Fin</label>
                    </div>

                </div>
                <div class="modal-footer">
                  <button class="btn btn-secondary boton-produccion mr-1" data-bs-dismiss="modal"
                    style="border-radius: 0;">Cancelar</button>
                  <button type="button" class="btn btn-primary boton-produccion ml-3" style="border-radius: 0;"
                    onclick="editarTarea(${cont})">Guardar Cambios</button>
                </div>
              </div>
            </div>
          </div>
          <!--End Modal editar-->
        `;

        Swal.fire({
          position: 'top-end',
          icon: 'success',
          title: 'Tarea Agregada',
          showConfirmButton: false,
          timer: 1000
        });


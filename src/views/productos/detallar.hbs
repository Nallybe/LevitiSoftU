        <center>
            <div class="container mb-5">
                <table class="table table-hover" style="text-align:center;" id="tabla-compras-detalles">
                    <thead style="background-color: #282d32; color:white;">
                        <tr>
                            <th colspan="3" style="background-color: #30363d; color:white;"><b>Registro</b></th>
                        </tr>
                        <tr>
                            <th class="w-1/4 ...">#</th>
                            <th class="w-1/4 ...">Imagen</th>
                            <th class="w-1/4 ...">Nombre</th>
                            <th class="w-2/4 ...">Descripción</th>
                            <th class="w-1/4 ...">Precio</th>
                            <th class="w-1/4 ...">Stock</th>
                            <th class="w-1/4 ...">Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each producto}}
                        <tr class="table-active">
                            <td class="py-3 px-6 text-center">{{idProducto}}</td>
                            <td class="px-6 text-center">
                                <center>
                                    <img src="/assets/img/Productos/{{imagen}}" alt="Imagen del producto" width="80px"

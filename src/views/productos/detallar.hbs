                                </center>
                            </td>
                            <td class="p-3 text-center">{{nombre}}</td>
                            <td class="p-3 text-center">{{descripcion}}</td>
                            <td class="p-3 text-center">{{precio}}</td>
                            <td class="p-3 text-center">{{stock}}</td>
                            <td class="p-3 text-center">{{#if estado1}}Activo{{/if}} {{#if estado2}}Inactivo{{/if}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <table class="table table-hover mt-4" style="text-align:center;" id="tabla-compras">
                            <thead style="background-color: #282d32; color:white;">
                                <tr>
                                    <th colspan="2" style="background-color: #30363d; color:white;"><b>Detalles</b></th>
                                </tr>
                                <tr>
                                    <th class="w-1/4 ...">#</th>
                                    <th class="w-1/4 ...">Insumo</th>
                                    <th class="w-2/4 py-4 ...">Cantidad Necesaria</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each detallesproducto}}
                                <tr class="table-active">
                                    <td class="py-2 px-6 text-center">{{cont}}</td>
                                    <td class="p-2 text-center">
                                        <a class="btn btn-info" href="/insumos/{{idInsumo}}" data-bs-toggle="popover"
                                            data-bs-trigger="hover" data-bs-title="<b>Insumo {{idInsumo}}</b>"
                                            data-bs-html="true" data-bs-content="
                                    <div class='row'>
                                        <div class='col-md-4'>
                                            <img src='https://icons.iconarchive.com/icons/fa-team/fontawesome/512/FontAwesome-Box-Open-icon.png' width='100' />
                                        </div>
                                        <div class='col-md-8'>
                                            <b>Nombre:</b> {{nombreI}}<br>
                                            <b>Medida:</b> {{medidaI}}<br>
                                            <b>Stock:</b> {{cantidadI}}<br>
                                        </div>
                                    </div>
                                ">{{nombreI}} <span class="badge text-bg-secondary"><i class="fas fa-box-open"
                                                    style="color: black"></i></span></a>
                                    </td>
                                    <td class="p-3 text-center">{{cantidad_n}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-2"></div>
                </div>


            </div>
    </div>
</div>
</center>


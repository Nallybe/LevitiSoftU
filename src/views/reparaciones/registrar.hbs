        //var medidaValue = selectedOptionI.getAttribute('medida');
        //medida.value = medidaValue;
        total.disabled = false;
        fechaEntrega.disabled = false;
        btn.disabled = false;

        mensajeErrorCliente.innerHTML = '';
        mensajeErrorCliente.style.display = 'none';

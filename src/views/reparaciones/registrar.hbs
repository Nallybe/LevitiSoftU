        total.disabled = true;
        fechaEntrega.disabled = true;
        btn.disabled = true;

        mensajeErrorCliente.innerHTML = '<span class="icono fa fa-circle-xmark"></span>El cliente no es válido';
        mensajeErrorCliente.style.display = 'block';
      }
    }

  <script>
    var cont = 0;
    function agregarArticulo() {
      const articulo = {
        productoReparar: document.getElementById('articulo_R').value,
        descripcion: document.getElementById('descripcion_R').value,
        observacion: document.getElementById('observacion_R').value,
      };

      if (articulo.productoReparar != "" && articulo.descripcion != "" && articulo.observacion != "") {
        cont++;
        document.getElementById('ListaArticulos').innerHTML += `
          <tr id="${cont}"style="text-align: center">
              <td class="text-center">${cont}</td>
              <td class="text-center">
                  <input name="productoReparar" id="productoReparar_${cont}" value="${articulo.productoReparar}" style="text-align: center; width: 200px;  border: none;" readonly>
              </td>
              <td class="text-center w-2/4">
                  <textarea name="descripcion" id="descripcion_${cont}" style="text-align: center; width: 250px;  border: none;" readonly>${articulo.descripcion}</textarea>
              </td>
              <td class="text-center w-2/4">
                  <textarea name="observacion" id="observacion_${cont}" style="text-align: center; width: 250px;  border: none;" readonly>${articulo.observacion}</textarea>
              </td>
              <td class="text-center">

                <a class="boton-reparacion" href="#" style="color: #292b2c;" data-bs-toggle="modal" data-bs-target="#editar${cont}">
                  <i class="fa-sharp fa-solid fa-pen" style="margin-left: 10px;"></i>
                </a>

                <a class="boton-reparacion" href="#" onclick="eliminarArticulo(${cont})" style="color: #292b2c;">
                  <i class="fas fa-trash"></i>
                </a>
              </td>
          </tr>


          <!-- Modal editar-->
          <div class="modal fade" id="editar${cont}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
              <div class="modal-content" style="border-radius: 0;">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">Editar Artículo ${cont}</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-floating mb-3">
                      <textarea class="form-control" id="articulo_R2_${cont}" style="border-radius: 0; text-align: left;" placeholder="0000">${articulo.productoReparar}</textarea>
                      <label for="articulo_R2_${cont}">Articulo</label>
                    </div>

                    <div class="form-floating mb-3">
                      <textarea class="form-control pb-5" id="descripcion_R2_${cont}" style="border-radius: 0; text-align: left;" placeholder="0000">${articulo.descripcion}</textarea>
                      <label for="descripcion_R2_${cont}">Descripción</label>
                    </div>

                    <div class="form-floating mb-3">
                      <textarea class="form-control pb-5" id="observacion_R2_${cont}" style="border-radius: 0; text-align: left;" placeholder="0000">${articulo.observacion}</textarea>
                      <label for="observacion_R2_${cont}">Observaciones</label>
                    </div>
                </div>
                <div class="modal-footer">
                  <button class="btn btn-secondary boton-reparacion mr-1" data-bs-dismiss="modal"
                    style="border-radius: 0;">Cancelar</button>
                  <button type="button" class="btn btn-primary boton-reparacion ml-3" style="border-radius: 0;"
                    onclick="editarArticulo(${cont})">Guardar Cambios</button>
                </div>
              </div>
            </div>
          </div>
          <!--End Modal editar-->
        `;

        Swal.fire({
          position: 'top-end',
          icon: 'success',
          title: 'Artículo Agregado',
          showConfirmButton: false,
          timer: 1000
        });

        document.getElementById('articulo_R').value = null;
        document.getElementById('descripcion_R').value = null;
        document.getElementById('observacion_R').value = null;

        //alert("Insumo Agregado");
      } else {
        //alert("Campos obligatorios");
        Swal.fire({
          position: 'top-end',
          icon: 'warning',
          title: 'Campos Obligatorios',
          showConfirmButton: false,
          timer: 1000
        });

        if (articulo.productoReparar == "") {
          mensajeErrorArticulo.innerHTML = '<span class="icono fa fa-circle-xmark"></span>El artículo es un campo requerido';
          mensajeErrorArticulo.style.display = 'block';
        }

        if (articulo.descripcion == "") {
          mensajeErrorDescripcion.innerHTML = '<span class="icono fa fa-circle-xmark"></span>La descripción es un campo requerido';
          mensajeErrorDescripcion.style.display = 'block';
        }

        if (articulo.observacion == "") {
          mensajeErrorObservacion.innerHTML = '<span class="icono fa fa-circle-xmark"></span>La observación es un campo requerido';
          mensajeErrorObservacion.style.display = 'block';
        }

      }
      //} else {
      // alert('El insumo seleccionado no es válido')
      //}
    }

    function eliminarArticulo(id) {
      articulo = document.getElementById(id);
      if (!articulo) {
        alert("Error");
      } else {
        padre = articulo.parentNode;
        padre.removeChild(articulo);
        //alert("articulo Eliminado");
        Swal.fire({
          position: 'top-end',
          icon: 'success',
          title: 'Articulo Eliminado',
          showConfirmButton: false,
          timer: 1000
        });
      }
    }



    function editarArticulo(id) {
      const idProR = 'productoReparar_' + id;
      const idDes = 'descripcion_' + id;
      const idObs = 'observacion_' + id;

      const idProR_R = 'articulo_R2_' + id;
      const idDes_R = 'descripcion_R2_' + id;
      const idObs_R = 'observacion_R2_' + id;

      document.getElementById(idProR).value = document.getElementById(idProR_R).value;
      document.getElementById(idDes).value = document.getElementById(idDes_R).value;
      document.getElementById(idObs).value = document.getElementById(idObs_R).value;

      Swal.fire({
        position: 'top-end',
        icon: 'success',
        title: 'Articulo Actualizado',
        showConfirmButton: false,
        timer: 1000
      });
    }

  </script>

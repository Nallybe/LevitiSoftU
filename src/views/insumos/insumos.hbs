<script>
    const stockInput = document.getElementById('stockInsumo');
    const formulario = document.getElementById('formularioInsumo');

    formulario.addEventListener('submit', function(event) {
        const inputValue = stockInput.value;
        const cleanedValue = inputValue.replace(/[+\-,]/g, '');

        if (isNaN(cleanedValue) || cleanedValue === '0') {
            mostrarError(mensajeErrorStock, 'Ingrese números mayores de 0');
            validacionesExitosas = false;
            event.preventDefault();
        } else {

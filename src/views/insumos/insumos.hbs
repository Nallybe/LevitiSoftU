{{!-- Funcion buscar insumo --}}
<script>
    function filtrarTabla() {
        var input = document.getElementById("buscar-input");
        var filtro = input.value.toUpperCase();
        var tabla = document.getElementById("tabla-insumos");
        var filas = tabla.getElementsByTagName("tr");

        for (var i = 0; i < filas.length; i++) {
            var celdaInsumo = filas[i].getElementsByTagName("td")[1];

            if (celdaInsumo) {
                var textoInsumo = celdaInsumo.textContent || celdaInsumo.innerText;
                if (textoInsumo.toUpperCase().indexOf(filtro) > -1) {
                    filas[i].style.display = "";
                } else {
                    filas[i].style.display = "none";
                }
            }
        }
    }
</script>



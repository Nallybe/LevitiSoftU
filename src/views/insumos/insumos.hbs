<center>
    <div class="container">


        <div class="row">
            <div class="col-md-4">
                <div class="row" style="margin-left: 8px;">
                    <div class="col-md-8 col-9">
                        <input id="buscar-input"
                            style="height: 100%; border-radius: 0; margin-top: 4px; width: 100%; margin-right: 0;"
                            class="form-control me-2" type="search" placeholder="Buscar Insumo" aria-label="Search"
                            oninput="filtrarTabla()">
                    </div>
                    <div class="col-md-2 col-3 pt-2">
                        <button class="btn btn-outline-success" type="submit"
                            style="height: 100%; border-radius: 0; width: 100%; padding: 0;" onclick="filtrarTabla()">
                            <i class="fa-sharp fa-solid fa-magnifying-glass" style="width: 100%;"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-5"></div>
            <div class="col-md-3">
                <a href="AgregarInsumo" class="btn btn-success" style="border-radius: 2;"><i
                        class="fa-solid fa-circle-plus"></i>
                    Agregar Insumo</a>
            </div>
        </div>

        <br>
        <table class="table" style="text-align:center;" id="tabla-insumos">
            <thead style="background-color: #282d32; color:white;">
                <tr>
                    <th>Id</th>
                    <th>Insumo</th>
                    <th>Medida</th>
                    <th>Stock</th>
                    <th>Estado</th>
                    <th>Funciones</th>
                </tr>
            </thead>
            <tbody>

                {{#each insumos}}
                <tr>
                    <td class="py-3 px-6 text-center">{{idInsumo}}</td>
                    <td class="p-3 text-center">{{nombre}}</td>
                    <td class="p-3 text-center">{{medida}}</td>
                    <td class="p-3 text-center">{{stock}}</td>
                    <td class="p-3 text-center">{{estado}}</td>
                    <td>
                        <a href="EditarInsumo/{{idInsumo}}" style="color: #292b2c; " class="boton-insumo">
                            <i type="button" class="fa-sharp fa-solid fa-pen"></i>
                        </a>
                        <form action="/EliminarInsumo" method="POST" class="boton-insumo" id="eliminarInsumoForm">
                            <input type="hidden" value="{{idInsumo}}" name="idInsumos">
                            <a type="button" onclick="alerta()"><i class="fa fa-trash" style=""></i></a>
                        </form>
                    </td>
                </tr>

                {{/each}}

                <script>
                    // Obtener todas las filas de la tabla
                    var rows = document.querySelectorAll('tr');

                    // Iterar sobre cada fila (excluyendo la primera fila de encabezados)
                    for (var i = 1; i < rows.length; i++) {
                        var stockCell = rows[i].querySelector('.p-3.text-center:nth-child(4)'); // Columna de stock (índice 4)

                        // Verificar si el stock es igual o menor a 5
                        var stock = parseInt(stockCell.textContent);
                        if (stock <= 5) {
                            // Agregar la clase "fila-roja" a la fila actual (excluyendo la columna "Funciones")
                            rows[i].classList.add('fila-roja');
                            // Agregar el estilo al elemento con la clase "fa-trash" dentro de la fila
                            var trashIcon = rows[i].querySelector('.fa-trash');
                            trashIcon.style.color = 'black';
                        }
                    }
                </script>
            </tbody>
        </table>
    </div>
    <br><br><br><br><br><br><br>
    </div>
    </div>
</center>


</body>
{{#if asignacion}}
<script>
    var permisosInput = document.querySelector('#permisosInput');
    var permisosValue = permisosInput.value;

    var palabras = permisosValue.split(',');

    var menuItems = document.querySelectorAll('.nav li');

    menuItems.forEach(function (item) {
        var items = item.querySelector('p').textContent.trim().toLowerCase();

        if (palabras.includes(items)) {
            item.style.display = 'block';
        } else {
            item.style.display = 'none';
        }
    });
</script>
{{/if}}

<script>
    function alerta() {
        Swal.fire({
            title: '¿Estás seguro?',
            text: "¡No podrás revertir esto!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sí, eliminar insumo!'
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById("eliminarInsumoForm").submit();
            }
        });
    }

    function filtrarTabla() {
        var input = document.getElementById("buscar-input");
        var filtro = input.value.toUpperCase();
        var tabla = document.getElementById("tabla-insumos");
        var filas = tabla.getElementsByTagName("tr");

        for (var i = 0; i < filas.length; i++) {
            var celdaInsumo = filas[i].getElementsByTagName("td")[1];

            if (celdaInsumo) {
                var textoInsumo = celdaInsumo.textContent || celdaInsumo.innerText;
                if (textoInsumo.toUpperCase().indexOf(filtro) > -1) {
                    filas[i].style.display = "";
                } else {
                    filas[i].style.display = "none";
                }
            }
        }
    }
</script>

<!DOCTYPE html>
<html lang="es">

{{>headerId}}

<body style="background-color: #E3E3E3;">
    <!--Barra de navegación-->
    <style>
        #mensajeErrorNombre {
            display: none;
            color: red;
            margin-top: 5px;
        }

        #mensajeErrorNombre .icono {
            display: inline-block;
            vertical-align: middle;
            margin-right: 5px;
            width: 15px;
            height: 15px;
        }

        #mensajeErrorStock {
            display: none;
            color: red;
            margin-top: 5px;
        }

        #mensajeErrorStock .icono {
            display: inline-block;
            vertical-align: middle;
            margin-right: 5px;
            width: 15px;
            height: 15px;
        }
    </style>
    {{> barId}}
    <!--Barra de navegación-->
    <center>
        <div class="container" style="margin-top: 80px;">

            <!--Start Form&Card-->
            <div class="card" style="width: 85%; border-radius: 0;">
                <div class="card-body">
                    <h4 class="card-title" style="margin-bottom: 2%;">Editar insumo</h4>
                    <!--Start Card 1-->
                    {{#each insumos}}
                    <form action="" method="post" id="formulario">
                        <div class="row justify-content-center">
                            <div class="col-5">
                                <div class="form-group">
                                    <label for="floatingInput" style="float: left; padding-right: 10px;">Nombre</label>
                                    <input type="text" class="form-control" id=" nombreInsumo" style="border-radius: 0;"
                                        name="nombre" value="{{nombre}}">
                                    <div id="mensajeErrorNombre"></div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="floatingInput" style="float: left; padding-right: 10px;">Stock</label>
                                    <input type="number" class="form-control" id="stockInsumo" style="border-radius: 0;"
                                        name="stock" value="{{stock}}" min="1">
                                    <div id="mensajeErrorStock"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-5">
                                <div class="form-group">
                                    <label for="floatingInput" style="float: left; padding-right: 10px;">Medida</label>
                                    <select class="form-control" id="floatingInput" style="border-radius: 0;"
                                        name="medida" value="{{medida}}">
                                        <option value="Metro">Metro</option>
                                        <option value="Unidad">Unidad</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="floatingInput" style="float: left; padding-right: 10px;">Estado</label>
                                    <select class="form-control" id="floatingInput" style="border-radius: 0;"
                                        name="estado" value="{{estado}}">
                                        <option value="A">Activo</option>
                                        <option value="I">Inactivo</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                </div>
                <div class="row">
                    <div class="col-6">
                        <a class="btn btn-danger" href="/insumos" style="border-radius: 2; " type="button">Cancelar</a>
                    </div>
                    <div class="col-6">
                        <button type="submit" class=" btn btn-success" style="border-radius: 2; color:white;">
                            Editar</button>
                    </div>
                </div>

                <br>
            </div>
        </div>
        </form>
        {{/each}}
        <!--End Form&Card-->
    </center>


</body>
